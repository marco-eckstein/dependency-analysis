{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "target",
    // "downlevelIteration": true, // Cause problems. See: https://github.com/Microsoft/TypeScript/issues/17195

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    // Works with Typescript, but not with Jasmine:
    // "baseUrl": "./",
    // "paths": { "main/*": ["./src/main/*"] },

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Other Options */
    "pretty": true
  }
}
